# Production Environment Configuration Template
# Copy this file to .env and modify values as needed

# Application
APP_NAME=Laravel
APP_ENV=production
APP_KEY=base64:your-generated-key-here
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

# Cache Configuration (Redis recommended for production)
CACHE_STORE=redis
CACHE_PREFIX=laravel_cache

# Session Configuration (Redis recommended for production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_COOKIE=laravel_session
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel_production
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Queue Configuration (Redis recommended for production)
QUEUE_CONNECTION=redis

# Broadcasting
BROADCAST_CONNECTION=log

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your_smtp_host
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Production Optimization Settings
# Enable OPcache for better PHP performance
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_MEMORY_CONSUMPTION=128
PHP_OPCACHE_MAX_ACCELERATED_FILES=10000

# Laravel Optimization Commands to run in production:
# php artisan config:cache
# php artisan route:cache
# php artisan view:cache
# php artisan event:cache
# php artisan queue:restart

# Performance Monitoring
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security Settings
SECURE_HEADERS=true
HSTS_ENABLED=true
CONTENT_SECURITY_POLICY=enabled

# Additional Performance Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
HORIZON_ENABLED=true